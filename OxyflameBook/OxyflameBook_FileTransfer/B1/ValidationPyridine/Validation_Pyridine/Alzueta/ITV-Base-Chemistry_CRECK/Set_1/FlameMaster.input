#phi = 16.667

Pressure = 1.01325e5 # 1 atm

ExactBackward = TRUE

#######################
# Boundary conditions #
#######################

ContInc = 25
ContType is Temperature
ContBound = 1500

InitialCond {
	t = 600 # [K]
	X->C5H5N = 0.000125
    X->O2    = 0.000095
    X->NO    = 0.000000
    X->N2    = 0.999780
}
